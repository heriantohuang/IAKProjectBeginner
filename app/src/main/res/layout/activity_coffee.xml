<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <EditText
        android:id="@+id/mTextNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:hint="Your name"
        android:textSize="@dimen/text_14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Menu"
        android:textAllCaps="true"
        android:textSize="@dimen/text_14"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/mSpinnerMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"></Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Topping"
        android:textAllCaps="true"
        android:textSize="@dimen/text_14"
        android:textStyle="bold" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:id="@+id/mRadioGroup">

        <RadioButton
            android:id="@+id/mRadioItem1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Susu" />

        <RadioButton
            android:id="@+id/mRadioItem2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coklat" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Quantity"
        android:textAllCaps="true"
        android:textSize="@dimen/text_14"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mButtonMin"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:onClick="onClickMin"
            android:text="-"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/mTextQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="@dimen/text_14" />

        <Button
            android:id="@+id/mButtonPlus"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:onClick="onClickPlus"
            android:text="+"
            android:textSize="@dimen/text_14" />
    </LinearLayout>

    <TextView
        android:id="@+id/mTextHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="$0"
        android:textSize="@dimen/text_18"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onButtonReset"
            android:text="Reset"
            android:textSize="@dimen/text_14" />

        <Button
            android:id="@+id/mButtonOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickOrder"
            android:text="Submit"
            android:textSize="@dimen/text_14" />
    </LinearLayout>
</LinearLayout>
